$bg = #ddd

// Все цвета идут от светлого к темному

// Elements colors
$blue = #427ff0
$blue1 = #2b6be1

$grey1 = #2b6be1
$grey = #f8faff

// Text colors

.fake_img {
  background #eee
  box-shadow 0 0 10px #ccc
  border-radius 10px
  height 400px
  border 1px solid #ccc
}

a 
  color $blue

body
  background $bg

.btn
  &.btn-primary
    background $blue!important
    &--lite
      background lightblue!important
      border-color lightblue!important
      color $blue

.wrapper
  width 1280px
  margin 0 auto
  background #fff
  margin-top 20px
  box-shadow 0 0 20px #ccc
  padding 0 150px

.header
  height: 100px
  display flex
  align-items center
  justify-content space-between

  &__nav
    list-style none
    display flex

.nav_link
  margin-right 25px
  a
    color #aaa

.slider
  position relative
  border 1px solid red
  height 800px
  margin-right -150px

  &_logos
    list-style none
    display flex
    li
      margin-right 10px
      img
        height 40px

  &__footer
    position absolute
    bottom 0
    width 100%
    background #eee

.block 
  margin 80px 0

.box
  border-radius 20px
  box-shadow 0 0 15px #eee
  padding 25px
  background #fff

  &--bordered
    box-shadow none
    border 1px solid #eee

.icon_block
  display flex

.social
  list-style none
  display flex

  li
    width 30px
    height: 30px
    display flex
    align-items center
    justify-content center
    margin-right 10px
    border-radius 50%
    background darkblue
    color #fff