@import "./fonts/fonts.css"

$bg = #ddd

// Все цвета идут от светлого к темному

// Elements colors
$blue = #427ff0
$blue1 = #2b6be1

$grey = #f8faff
$grey1 = #eaf1ff

// Text colors
$text = #939fb7
$text1 = #657699
$text2 = #434f6f

img 
  max-width 100%

.bold
  font-weight 700

.title-color
  color $text1

.title
  font-size 60px
  line-height 68px
  color $text2
  margin-bottom 50px

.subtitle
  font-size 36px
  line-height 42px
  color $text2
  margin-bottom 32px

.small_title
  font-size 24px
  color $text2
  line-height 30px
  font-weight 600

.font-size-24
  font-size 24px
  line-height 36px

.font-size-18
  font-size 18px
  line-height 30px

.font-size-16
  font-size 16px
  line-height 30px

.font-size-14
  font-size 14px
  line-height 24px

.fake_img {
  background #eee
  box-shadow 0 0 10px #ccc
  border-radius 10px
  height 400px
  border 1px solid #ccc
}

.astriks
  color $blue

.main-text
  color $text1

.gray-text
  color $text

.mb
  &-sm
    margin-bottom 25px
  &-lg
    margin-bottom 50px

.card 
  border-radius 16px
  border-color $grey1!important

  &--borderless
    border none !important
  &--shadow
    box-shadow 0 10px 20px $grey1

a 
  color $blue

body
  background $bg

.btn
  border-radius: .5rem!important

  &.btn-primary
    background $blue!important
    padding 15px 20px
    font-weight bold
    font-size 16px

    &:active,
    &:focus
      color $blue!important
      box-shadow none!important

    &:hover
      background $blue1!important
      color #fff!important
      

    &--lite
      background $grey1!important
      border-color $grey1!important
      color $blue

      &:hover
        background $blue!important
        color #fff!important

.wrapper
  max-width 1680px
  margin 0 auto
  background #fff
  box-shadow 0 0 20px #ccc
  padding 0 165px

.header
  height: 150px
  display flex
  align-items center
  justify-content space-between

  &__nav
    list-style none
    display flex
    margin-bottom 0

.nav_link
  margin-right 40px
  a
    color $text

    &:hover
      text-decoration none
      color $blue

.slider
  background url("../images/header_bg.jpg") no-repeat
  position relative
  padding-top 130px
  height 800px
  margin-right -150px

  &_logos
    list-style none
    display flex
    align-items center
    margin 0
    padding 0

    li
      margin-right 30px

  &__footer
    position absolute
    bottom 45px
    width 100%

.block 
  margin-bottom 120px

.app
  padding 100px 165px
  margin-left -165px
  margin-right -165px
  background url("../images/app.jpg") no-repeat

.box
  border-radius 20px
  box-shadow 0 0 15px #eee
  padding 25px
  background #fff

  &--bordered
    box-shadow none
    border 1px solid #eee

.dir
  &-1
    background url("../images/dir-1.jpg") no-repeat
    background-size 100%
    background-position bottom
  
  &-2
    background url("../images/dir-2.jpg") no-repeat
    background-size 100%
    background-position bottom

  &-3
    background url("../images/dir-3.jpg") no-repeat
    background-size 100%
    background-position bottom

  &-4
    background url("../images/dir-4.jpg") no-repeat
    background-size 100%
    background-position bottom

.icon_block
  display flex

.social
  list-style none
  display flex

  li
    width 30px
    height: 30px
    display flex
    align-items center
    justify-content center
    margin-right 10px
    border-radius 50%
    background darkblue
    color #fff