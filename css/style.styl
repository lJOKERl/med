@import url("../fonts/fonts.css")

$bg = #ddd

// Все цвета идут от светлого к темному

// Elements colors
$blue = #427ff0
$blue1 = #2b6be1
$hover = #d9e5fc

$grey = #f8faff
$grey1 = #eaf1ff

// Text colors
$text = #939fb7
$text1 = #657699
$text2 = #434f6f

// Border colors
$border = #dce4f6

body
  background $bg
  font-family 'Golos Text'
  font-size 16px
  color $text1

img 
  max-width 100%

.icon
  max-width 58px

.bold
  font-weight 700

.w-100
  width 100%

.title-color
  color $text1

.title
  font-size 60px
  line-height 68px
  color $text2
  margin-bottom 50px
  font-weight 600

.subtitle
  font-size 36px
  line-height 42px
  color $text2
  font-weight 600
  margin-bottom 32px

.small_title
  font-size 24px
  color $text2
  line-height 30px
  font-weight 600

.font-size-24
  font-size 24px
  line-height 36px

.font-size-18
  font-size 18px
  line-height 30px

.font-size-16
  font-size 16px
  line-height 30px

.font-size-14
  font-size 14px
  line-height 24px

.font-size-13
  font-size 13px
  line-height 22px


.relative
  position relative

.bottom_btn
  position absolute
  bottom 0

.astriks
  color $blue

.black-title
  color $text2
  font-weight 600

.gray-text
  color $text

.mb
  &-sm
    margin-bottom 25px
  &-lg
    margin-bottom 50px

.mt
  &-sm
    margin-top 25px
  &-lg
    margin-top 50px

.card 
  border-radius 16px
  border-color $border!important

  &--borderless
    border none !important
  &--shadow
    box-shadow 0 10px 20px $grey1

a 
  color $blue

  &:hover
    color $blue1

.btn
  border-radius: .5rem!important

  &-sm
    padding 6px 20px!important
    margin-bottom 6px

    &.btn.btn-primary--lite
      &:hover
        background $grey1!important
        color $blue!important
        box-shadow none!important
        cursor default

  &.btn-primary
    background $blue!important
    padding 15px 40px
    font-weight 500
    font-size 16px
    box-shadow 2px 10px 10px $grey1

    &:active,
    &:focus
      color $blue!important
      box-shadow none!important
      

    &:hover
      background $blue1!important
      color #fff!important

    &--lite
      background $grey1!important
      border-color $grey1!important
      color $blue
      box-shadow none

      &:hover
        background $hover!important
        color $blue1!important

.scroll-top
  cursor pointer
  border 1px solid $border
  position fixed
  right 55px
  bottom 100px
  width 55px
  height 55px
  border-radius 6px
  display flex
  align-items center
  justify-content center
  background-color rgba(255, 2255, 255, .5)
  background-image url("../images/icons/arrow.png")
  background-position-x center
  background-position-y center
  background-repeat no-repeat
  background-size 9px

  &:hover
    background-color rgba(255, 2255, 255, .75)
    background-image url("../images/icons/arrow_hover.png")

  &:active
    background-color rgba(234, 241, 255, .9)
    border-color $grey1

.wrapper
  max-width 1680px
  margin 0 auto
  background #fff
  box-shadow 0 0 20px #ccc
  padding 0 125px
  overflow hidden

.header
  height: 150px
  display flex
  align-items center
  justify-content space-between

  &__buttons
    display flex
    align-items center

  &__nav
    list-style none
    display flex
    margin-bottom 0

  .lang
    margin-right 30px
    border 1px solid $grey1
    padding 3px
    border-radius 25px

    button 
      border none
      border-radius 4px
      background none
      border-radius 25px
      padding 2px 10px
      font-weight 600
      font-size 14px
      color $text1

      &.active
        background $grey1
        color $blue


.nav_link
  margin-right 40px
  a
    color $text

    &:hover
      text-decoration none
      color $blue

.slider
  background url("../images/header_bg.jpg") no-repeat
  position relative
  padding-top 130px
  height 800px
  margin-right -125px

  &_logos
    list-style none
    display flex
    align-items center
    margin 0
    padding 0

    li
      margin-right 30px

  &__footer
    position absolute
    bottom 45px
    width 100%

.block 
  margin-bottom 100px

.app
  padding 100px 125px
  margin-left -125px
  margin-right -125px
  height 580px
  background url("../images/app.jpg") no-repeat

  &__btns
    a 
      margin-right 10px
      opacity .85

      &:hover
        text-decoration none
        opacity 1

.box
  border-radius 20px
  box-shadow 0 0 15px #eee
  padding 25px
  background #fff

  &--bordered
    box-shadow none
    border 1px solid #eee

.dir
  &-1
    background url("../images/dir-1.jpg") no-repeat
    background-size 100%
    background-position bottom
  
  &-2
    background url("../images/dir-2.jpg") no-repeat
    background-size 100%
    background-position bottom

  &-3
    background url("../images/dir-3.jpg") no-repeat
    background-size 100%
    background-position bottom

  &-4
    background url("../images/dir-4.jpg") no-repeat
    background-size 100%
    background-position bottom

.card-padding
  padding 35px
  padding-bottom 90px

.blue-icon
  height 50px
  margin-bottom 30px

/* Карусель */
#slider
  width 900px
  padding 50px
  border-radius 20px
  background-color rgba(198, 216, 250, .15)

.owl-theme .owl-dots .owl-dot span
  width 8px
  height 8px
  background $grey1


.owl-theme .owl-dots .owl-dot.active span, 
.owl-theme .owl-dots .owl-dot:hover span 
  background $blue


.partners
  background url("../images/partners.jpg") no-repeat
  padding-top 50px

  .card 
    margin 25px 0
  .card-body
    padding 55px 0
  p
    margin-bottom 5px

.icon_block
  display flex

.title_height
  height 100px

.single_post
  .main-text
    line-height 24px
    margin-bottom 8px

.post_with_img
  display flex
  margin-bottom 30px

  &_title
    color $text1
    line-height 24px
    font-weight 600
  &__image
    display inline-block
    border-radius 20px
  &__content
    display flex
    flex-direction column
    justify-content center
    margin-left 15px

.last_post
  &__image
    width 490px
    height 350px
    border 1px solid #eee
    border-radius 20px
    display flex
    margin-right 10px
    margin-bottom 25px
    object-fit contain

.subscription
  padding 30px
  background $grey1
  height 170px
  border-radius 20px
  
  .btn-primary
    padding 10px 20px!important

  &__input
    background #fff
    border 1px solid $border
    height 60px
    border-radius 15px
    display flex
    justify-content space-between
    align-items center
    padding 6px
    margin-bottom 10px

    input
      border none
      outline none
      padding 10px

      &::placeholder
        color $text

.digital
  margin-left -125px
  margin-right -125px
  padding-left 125px
  padding-right 125px
  display flex
  padding-top: 90px
  padding-bottom: 90px
  background url("../images/digital.jpg") no-repeat
  &__list
    display flex
    margin-bottom 10px
  &__icon
    width 54px
    height 54px
    border-radius 10px
    background $blue
    flex-shrink 0
    margin-right 25px
    color #fff
    display flex
    align-items center
    justify-content center

  &__text
    .black-title
      margin-bottom 3px

.footer
  padding 50px 0
  display flex
  justify-content space-between
  font-size 14px
  line-height 24px

  p
    margin-bottom 8px

  &__info
    margin-right 60px
    width 550px

    &__top
      display flex
      align-items center
      margin-bottom 30px

  &__address
    padding-right 60px
  &__tel
    padding-right 20px

  &__logo
    width 145px

  &__title
    font-weight 600
    margin-bottom 0!important

  .social
    display flex
    margin-bottom 0

    li
      width 35px
      height 35px
      border-radius 50%
      display flex
      align-items center
      margin-right 10px
      justify-content center
      background $grey1
      color $blue

.news
  font-size 18px
  line-height 30px

  &__header
    margin-left -165px
    margin-right -165px
    padding 0 165px
    background: linear-gradient(0deg, $grey1 0%, #fff 50%);
    margin-bottom 70px
    padding-bottom 60px

    &__nav
      display flex
      margin-top 100px
      justify-content space-between
      align-items center
      font-weight 600

      &__left,
      &__right
        width 50%
        display flex
        align-items center
        line-height 24px

      &__left
        margin-right 20px
      
      &__right
        margin-left 20px
        text-align: right 

    .share
      display flex
      align-items center
      justify-content: space-between
      width 275px

  &__content
    p:first-of-type
      font-size 24px
      line-height 36px

  .breadcrumbs
    color $text
    margin-bottom 20px

  p
    margin-bottom 40px

  blockquote
    padding 100px 50px
    background $grey1
    font-size 22px
    line-height 36px
    margin-bottom 35px

  .tags
    margin-bottom 50px
  
  .related-news
    &__img
      width 100%
      margin-bottom 15px

    .post_with_img__content
      margin-left 0

  .files
    margin-bottom 35px
    .file
      cursor pointer
      display inline-flex
      font-size 16px
      margin-bottom 25px
      margin-right 25px
      &__description
        p
          margin-bottom 0

  a
    font-weight 600
    text-decoration none
    
  figure
    img
      border-radius 20px
    figcaption
      font-size 14px
      color $text1
      margin-top 10px

  h2
    font-size 36px
    line-height 42px
    color $text2
    margin-bottom 30px
    font-weight 600

  h3
    font-size 24px
    color $text2
    line-height 30px
    margin-bottom 16px
    font-weight 600

  h4
    font-size 18px
    line-height 30px
    color $text1
    font-weight 600

  ul
    list-style none
    padding 0
    margin: 35px 0;
    margin-left 20px

    li
      margin-bottom 15px

      &:before
        content ""
        display inline-block
        margin-right 7px
        width 8px
        height 8px
        border-radius 50%
        background $blue
        margin-left -20px
        position relative
        top -3px

  ol 
    list-style-type: none; 
    counter-reset: num;
    margin: 35px 0;
    padding: 0;
    margin-left 20px

    li 
      position: relative;	
      margin-bottom 15px

      &:before 
        content: counter(num) '.'; 
        counter-increment: num;
        display: inline-block;	
        position: absolute;
        top: 0px;
        left: -26px;
        width: 20px;    
        font-weight 600
        text-align: right;
        color $text2

  table
    width 100%
    border-collapse: collapse;
    margin-bottom 35px

    th
      color $text
      font-weight normal
      font-size 16px
      padding 15px 
    tr
      &:nth-child(even)
        td
          background $grey
      &:hover
        td
          background $grey1
      td
        padding 15px    
        

